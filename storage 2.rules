rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Project files - users can only access files from their own projects
    match /projects/{projectId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        (resource.metadata.ownerId == request.auth.uid || 
         request.auth.uid in resource.metadata.collaborators);
    }
    
    // Public files - read access for all authenticated users
    match /public/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Templates - read access for all authenticated users
    match /templates/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (resource.metadata.ownerId == request.auth.uid || 
         request.auth.token.admin == true);
    }
    
    // Admin files - only admin users can access
    match /admin/{allPaths=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Default deny rule for any other files
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
