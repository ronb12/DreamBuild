        {
          "name": "Vercel",
          "type": "static_hosting",
          "features": ["edge_functions", "automatic_deployment", "preview_deployments"],
          "pricing": "free_tier_available"
        },
        {
          "name": "Netlify",
          "type": "static_hosting", 
          "features": ["forms", "functions", "split_testing", "edge_handlers"],
